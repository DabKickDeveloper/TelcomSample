<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inner_layout"
    android:layout_width="90dp"
    android:layout_height="85dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/userVideoThumbImageView"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="YouTube video thumbnail">

    </ImageView>

    <TextView
        android:id="@+id/userVideoTitleTextView"
        android:layout_below="@+id/userVideoThumbImageView"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#333333"
        android:textSize="12dp"
        android:text="Video Title Not Found" />

    <ImageView android:id="@+id/playThumb"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:alpha="0.9"
        android:layout_alignLeft="@+id/userVideoThumbImageView"
        android:layout_alignRight="@+id/userVideoThumbImageView"
        android:src="@drawable/play_video"/>

    <RelativeLayout
        android:id="@+id/dabby_layout"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:background="#70000000"
        android:visibility="gone">

        <!--<ImageView-->
        <!--android:id="@+id/running_dabby"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_centerInParent="true"/>-->
        <ProgressBar
            android:id="@+id/running_dabby"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="3dp"
        android:layout_height="85dp"
        android:layout_marginLeft="90dp"
        android:background="@android:color/transparent"/>

</RelativeLayout>