    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/waiting_layout">

        <RelativeLayout
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/end_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/round_circle" />

            <TextView
                android:id="@+id/myImageViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="end"
                android:textColor="@color/white"
                android:textSize="10pt" />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/endConfirmLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners_20radius"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@drawable/black">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_corners_20radius"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Leave a Message"
                android:textColor="@drawable/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="@string/LeaveAMessageContent"
                android:textColor="@drawable/black"
                android:textSize="17dp" />

            <RelativeLayout
                android:id="@+id/first_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/textContent"
                android:background="@drawable/grey"></RelativeLayout>

            <TextView
                android:id="@+id/OKBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/first_line"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="ok"
                android:textColor="@color/blue"
                android:textSize="18dp"></TextView>

            <RelativeLayout
                android:id="@+id/second_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/OKBtn"
                android:background="@drawable/grey"></RelativeLayout>

            <TextView
                android:id="@+id/NOThanksBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/second_line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="no thanks"
                android:textColor="@color/blue"
                android:textSize="18dp"></TextView>

            <RelativeLayout
                android:id="@+id/third_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/NOThanksBtn"
                android:background="@drawable/grey"></RelativeLayout>

            <TextView
                android:id="@+id/CancelBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/third_line"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="cancel"
                android:textColor="@color/blue"
                android:textSize="18dp"></TextView>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>