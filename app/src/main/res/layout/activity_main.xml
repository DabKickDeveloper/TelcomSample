<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dabkick.partner.tel.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/container"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Welcome to Telco Partner App"
        android:textSize="18dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/user_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/email_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Email" />

                <EditText
                    android:id="@+id/email_id"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/email" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_fields"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Phone" />


                <EditText
                    android:id="@+id/ph_num"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/phone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/unique_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_fields"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Uniq ID" />


                <EditText
                    android:id="@+id/un_id"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/id" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/registeredInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="The app is now registered with DabKick\nwith the provided user credentials." />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:columnCount="2"
                android:rowCount="3">

                <TextView
                    android:width="60dp"
                    android:gravity="left"
                    android:text="email:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emailText"
                    android:width="80dp"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="email" />

                <TextView
                    android:width="60dp"
                    android:gravity="left"
                    android:text="phone:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phoneText"
                    android:width="60dp"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="phone" />

                <TextView
                    android:width="60dp"
                    android:gravity="left"
                    android:text="unique :"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/uniqueIDText"
                    android:width="60dp"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="unique" />

            </GridLayout>


        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:text="Reset credentials" />

        <Button
            android:id="@+id/cnt_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Continue" />

    </LinearLayout>


</RelativeLayout>
